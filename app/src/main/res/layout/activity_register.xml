<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="544dp"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="134dp"
        android:backgroundTint="#2158df"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtPassRegister"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="402dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="295dp"
        android:background="@drawable/rounded_corner"
        android:drawableLeft="@drawable/password_ic"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Enter Password..."
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtUserRegister"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="369dp"
        android:background="@drawable/rounded_corner"
        android:drawableLeft="@drawable/username_ic"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Enter Username..."
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogoRegister"
        android:layout_width="312dp"
        android:layout_height="179dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="443dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homesense_logo" />

    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="298dp"
        android:layout_height="45dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="465dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="221dp"
        android:background="@drawable/rounded_corner"
        android:drawableLeft="@drawable/password_ic"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Confirm password..."
        android:inputType="text"
        android:paddingLeft="10dp"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>